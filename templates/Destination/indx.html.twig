{% extends 'base.html.twig' %}
{% block title 'Destinations' %}

{% block body %}
<style>
  #btnA {

    color: #ee6381;
    font-size: 20px;
  }

  #dest {
    background: rgb(245, 244, 244) !important;
  }

  .btn-primary:hover,
  .btn-primary:focus {
    background-color: #e46b6b;
    border-color: #ee6381;
    box-shadow: none;
    outline: none;
  }

  #b {
    font-size: 20px;
    padding: 6px;
    width: 100%;
    margin-left: 1%;
    color: #fff;
    background-color: #53a1a1;
    border-color: #53a1a1;
    margin-top: 2%
  }

  .header .overlay {

    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }


  .btn-primary {
    color: #fff;
    background-color: #53a1a1;
    border-color: #53a1a1;
  }

  section {
    padding: 20px 0;
  }

  section .section-title {
    text-align: center;
    color: #3d3f3f;
    margin-bottom: 10px;
    text-transform: uppercase;
  }

  #dest .card {
    border: none;
    background: #ffffff;
    margin: 10px;
  }

</style>
<section id="dest" class="pb-5">
  <div class="container">
    <h4 class="section-title h1">OUR TOURS</h4>
    <div class="row">
      {% for dest in destination %}
      <br>
      <!-- Tours -->
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="image-flip">
          <div class="mainflip flip-0">
            <div class="frontside">
              <div class="card">
                <div class="card-body text-center">
                  <p><img class=" img-fluid" src={{dest.getImage()}} alt="card image">
                  </p>
                  <h4 class="card-title">{{dest.getDesdest()}}</h4>
                  <a class=" btn btn-primary btn-sm" href="{{path('ville',{'id':dest.id})}}">+
                    Details</a>
                  <br>
                  {% if  app.user %}
                  <button class=" btn" style="float:left"><a id="btnA" href="{{path('Destination',{'id':dest.id}) }}">
                      Edit</a> </button>
                  <button class="btn" style="float:right"><a id="btnA" href="{{path('delete',{'id':dest.id})}}">
                      Delete</a> </button>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}

    </div>
    {% if  app.user %}
    <a style="color:white" href="{{path('NewDestination') }}">
      <button id="b" class="btn ">Add Destination</button></a> </button>
    {% endif %}
  </div>
  </div>
</section>
{% endblock %}
