{% extends 'base.html.twig' %}

{% block title %}Hello CircuitController!{% endblock %}

{% block body %}
<style>
  .btn-primary,
  .btn-primary:hover {
    background-color: #53a1a1;
    border-color: #53a1a1;
    box-shadow: none;
    outline: none;
  }

  #b {
    font-size: 20px;
    padding: 6px;
    width: 100%;
    margin-left: 1%;
    color: #fff;
    background-color: #53a1a1;
    border-color: #53a1a1;
    margin-top: 2%
  }

  #btnA {

    color: #ee6381;
    font-size: 20px;
  }

  body {
    background: rgb(247, 245, 245) !important;
  }

</style>
<section id="dest" class="pb-5">
  <div class="container">
    <h4 class="section-title h1" style="text-align: center;margin:3%;color:rgb(47, 51, 51)">OUR CIRCUITS</h4>
    <div class="row">
      {% for c in circuits %}
      <br>
      <!-- Tours -->
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="margin:4%">
          <h4 class="card-header" style="text-align:center;color: #ee6381;background-color:white">
            {{c.getDesCircuit()}}</h4>
          <div class="card-body">
            <h5 style="margin-left:30%;">Duree: {{c.getDureeCircuit()}} Jours</h5>
            <br>
            <a href="{{path('etape_circuit',{'id':c.id})}}" class="btn btn-primary"
              style="margin-left:37%;">+Details</a>
            <br />
            <br>
            {% if  app.user %}
            <button class=" btn" style="float:left"><a id="btnA" href="{{path('EditCircuit',{'id':c.id}) }}">
                Edit</a> </button>
            <button class="btn" style="margin-left:45%"><a id="btnA" href="{{path('deletecircuit',{'id':c.id}) }}">
                Delete</a> </button>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

    {% if  app.user %}
    <a style="color:white" href="{{path('AddCircuit') }}">
      <button id="b" class="btn ">Add Circuit</button></a> </button>
    {% endif %}
  </div>


</section>

{% endblock %}
