{% extends 'base.html.twig' %}

{% block title %}Hello VilleController!{% endblock %}

{% block body %}
<style>
  #btnA {

    color: white;

  }

  h2 {
    text-align: center;
    margin: 3%;

    color: #53a1a1;

  }

  span {
    text-align: center;
    margin: 0%;
    margin-left: 80%;
    color: #131212;
    font-size: 40px;
  }

  h5 {
    color: #53a1a1;
    font-weight: bold;
    ;
  }


  .btn-primary {
    background-color: #e46b6b;
    border-color: #ee6381;
    margin-left: 4%;
  }

  .btn-primary:hover {
    background-color: #e46b6b;
    border-color: #ee6381;
    margin-left: 4%;
  }

  #b {
    font-size: 20px;
    padding: 6px;
    width: 73%;
    margin-left: 8%;
    color: #fff;
    background-color: #53a1a1;
    border-color: #53a1a1;
    margin-top: 2%
  }

</style>
<section id="dest" class="pb-5">

  <div class="card bg-white " style="height:400px">
    <img src={{villes[0].codedest.Image}} alt="..." style="margin:1%;height:97%">
    <div class="card-img-overlay">
      <h3 class="card-title">
        <span>{{villes[0].codedest.desdest}}</span></h3>

    </div>
    <h2>Les Villes correspondantes </h2>
    <div class="row">
      {% for v in villes %}
      <div class="col-md-5" style="margin-left:7%">
        <div class="image-flip">
          <div class="mainflip flip-0">
            <div class="card mb-2" style="width:450px;margin:3%;height:200px">
              <div class="row no-gutters">
                <div class="col-md-5">
                  <img src={{v.getImage()}} class="card-img" alt="..." style="height:200px;">
                </div>
                <div class=" col-md-5">
                  <div class="card-body">
                    <h5 class="card-title" style="margin-left:19%;text-align:center">{{v.getDesVille()}}</h5>
                    <div style="margin-left:4%;">
                      <br>
                      <br>
                      <br>
                      {% if  app.user %}
                      <button class=" btn btn-primary " style="float:left"><a href="{{path('EditVille',{'id':v.id}) }}"
                          id="btnA">
                          Edit</a> </button>
                      <button class=" btn btn-primary " style=" margin-left:7%"><a
                          href="{{path('DeleteVille',{'id':v.id})}} " id="btnA">
                          Delete</a> </button>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class=" frontside">
            </div>
          </div>
        </div>
      </div>


      {% endfor %}

    </div>
    {% if  app.user %}
    <a style="color:white" href="{{path('NewVille') }}">
      <button id="b" class="btn ">Add Ville</button></a>

    {% endif %}


  </div>
</section>
{% endblock %}
